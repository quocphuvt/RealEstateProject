<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/building2"
        android:scaleType="centerCrop"
        android:layout_width="160dp"
        android:layout_height="match_parent" />
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name_item_real"
            android:textColor="#564848"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:text="New World SaiGon Hotel"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <ImageView
                android:layout_weight="0"
                android:src="@drawable/ic_location"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_address_item_real"
                android:text="119 Nguyen Huu Canh"
                android:paddingLeft="3dp"
                android:textSize="12sp"
                android:textColor="#564848"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_weight="0"
                android:src="@drawable/ic_store_black_24dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/tv_type_item_real"
                android:layout_weight="1"
                android:text="FOR LEASE"
                android:paddingLeft="3dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#F57C00"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_weight="0"
                android:src="@drawable/ic_phone_black_24dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/tv_contact_item_real"
                android:layout_weight="1"
                android:text="0987274110"
                android:paddingLeft="3dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#564848"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_typeOfRoom_hotel"
            android:textColor="#564848"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:text="Price"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_area_item_real"
            android:textColor="#564848"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:text="Area: 12m"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_oldPrice_hotel"
            android:textColor="#BCBCBC"
            android:gravity="end"
            android:visibility="gone"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="VND 1500000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_price_item_real"
            android:textColor="#565656"
            android:gravity="end"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:text="VND 1500000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_seeDetails_item_real"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:text="See details"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#3F51B5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>