<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:cardMaxElevation="10dp"
    android:elevation="10dp"
    android:layout_height="wrap_content">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            app:layout_anchor="@id/iv_city_layout"
            app:layout_anchorGravity="bottom|center"
            app:cardCornerRadius="50dp"
            app:cardMaxElevation="5dp"
            app:cardElevation="5dp"
            android:background="#BE2727"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <LinearLayout
                android:background="#334856"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/real"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <LinearLayout
                android:id="@+id/iv_city_layout"
                android:layout_weight="1"
                android:layout_width="150dp"
                android:layout_height="match_parent">
                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/building"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_name_item_search"
                    android:textSize="15sp"
                    android:textColor="#334856"
                    android:text="Sunwah"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_city_item_search"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:layout_marginTop="3dp"
                    android:textStyle="italic"
                    android:textColor="#707070"
                    android:text="Ho chi minh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.cardview.widget.CardView>