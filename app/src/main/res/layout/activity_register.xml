<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.SignInActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            app:srcCompat="@drawable/ic_register_account"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                        <TextView
                            android:textSize="15sp"
                            android:textColor="@color/colorPrimary"
                            android:text="Create new account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </FrameLayout>
        <androidx.cardview.widget.CardView
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:background="@drawable/edittext_border"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_weight="0"
                        app:srcCompat="@drawable/ic_account_circle_black_24dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_weight="1"
                        app:met_hideUnderline="true"
                        android:id="@+id/et_id_reg"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:hint="Input your ID here..."
                        android:textSize="12dp"
                        android:maxLength="40"
                        />
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/edittext_border"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:paddingRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_weight="0"
                        app:srcCompat="@drawable/ic_lock_black_24dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/et_password_reg"
                        android:layout_weight="1"
                        app:met_hideUnderline="true"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:inputType="textPassword"
                        android:maxLength="40"
                        android:textSize="12dp"
                        android:hint="Your password here..." />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        app:srcCompat="@drawable/ic_assignment_ind_black_24dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                    <TextView
                        android:text="Your infomation"
                        android:textSize="12dp"
                        android:textColor="@color/iconPrimaryColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_weight="1"
                        app:met_hideUnderline="true"
                        android:id="@+id/et_fullName_reg"
                        android:background="@drawable/edittext_border"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:maxLength="40"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="20dp"

                        android:hint="Your full name here..."
                        android:textSize="12dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/tv_birthday_reg"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="20dp"
                            android:maxLength="40"
                            android:hint="Pick your birthday here..."
                            android:textSize="12dp"
                            android:textColor="#B6B6B6"
                            />
                        <Button
                            android:id="@+id/btn_birthday_reg"
                            android:drawableLeft="@drawable/ic_date"
                            android:background="@android:color/transparent"
                            android:layout_width="25dp"
                            android:layout_height="25dp" />
                    </LinearLayout>
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_weight="1"
                        app:met_hideUnderline="true"
                        android:id="@+id/et_address_reg"
                        android:background="@drawable/edittext_border"
                        android:layout_width="300dp"
                        android:maxLength="40"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:hint="Your address here..."
                        android:textSize="12dp"
                        />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_weight="1"
                        app:met_hideUnderline="true"
                        android:id="@+id/et_phoneNumber_reg"
                        android:background="@drawable/edittext_border"
                        android:layout_width="300dp"
                        android:maxLength="40"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:hint="Your phone number here..."
                        android:textSize="12dp"
                        />
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginRight="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <CheckBox
                                android:id="@+id/chk_male"
                                android:layout_weight="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:text="Male"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <CheckBox
                                android:id="@+id/chk_female"
                                android:layout_weight="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:text="Female"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_submit_reg"
                    android:layout_width="300dp"
                    android:background="@color/colorPrimary"
                    android:textColor="#fff"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="20dp"
                    android:text="Register" />

                <Button
                    android:id="@+id/btn_cancle_reg"
                    android:background="@android:color/transparent"
                    android:textColor="#4CAF50"
                    android:layout_marginTop="5dp"
                    android:layout_width="300dp"
                    android:textSize="12dp"
                    android:layout_height="30dp"
                    android:text="cancle" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</LinearLayout>